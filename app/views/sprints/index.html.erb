<h1>Listing Products</h1>

<table>
  <% @sprints.each do |sprint| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
               
        <td class="list_description">
          <dl>
            <dt><%= sprint.name %></dt>
          </dl>
        </td>

        <td class="list_actions">
          <%= link_to 'Show', sprint %><br>
          <%= link_to 'Edit', edit_sprint_path(sprint) %><br>
          <%= link_to 'Destroy', sprint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Sprint', new_sprint_path %>
